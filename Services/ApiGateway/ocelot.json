{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:7001",
    "ServiceDiscoveryProvider": {
      "Type": "Consul",
      "Host": "localhost",
      "Port": 8500
    }
  },

  "Routes": [
    {
      "UpstreamPathTemplate": "/animals",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "DownstreamPathTemplate": "/api/animals",
      "DownstreamScheme": "http",
      "ServiceName": "animal-service",
      "LoadBalancerOptions": { "Type": "RoundRobin" },
      "SwaggerKey": "animals"
    },
    {
      "UpstreamPathTemplate": "/animals",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/animals",
      "DownstreamScheme": "http",
      "ServiceName": "animal-service",
      "LoadBalancerOptions": { "Type": "RoundRobin" },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "SwaggerKey": "animals"
    },
    {
      "UpstreamPathTemplate": "/animals/{id}",
      "UpstreamHttpMethod": [ "GET"],
      "DownstreamPathTemplate": "/api/animals/{id}",
      "DownstreamScheme": "http",
      "ServiceName": "animal-service",
      "LoadBalancerOptions": { "Type": "RoundRobin" },
      "SwaggerKey": "animals"
    },
    {
      "UpstreamPathTemplate": "/email/health",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "ServiceName": "email-service",
      "LoadBalancerOptions": { "Type": "RoundRobin" },
      "SwaggerKey": "emails"
    },
    {
      "UpstreamPathTemplate": "/email/send",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/send-email",
      "DownstreamScheme": "http",
      "ServiceName": "email-service",
      "LoadBalancerOptions": { "Type": "RoundRobin" },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "SwaggerKey": "emails"
    },
    {
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "ServiceName": "auth-service",
      "LoadBalancerOptions": { "Type": "RoundRobin" }
    },
    {
      "UpstreamPathTemplate": "/payments/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "DownstreamPathTemplate": "/{everything}", 
      "DownstreamScheme": "http",
      "ServiceName": "payment-service",
      "LoadBalancerOptions": { "Type": "RoundRobin" },
      "AuthenticationOptions": {
          "AuthenticationProviderKey": "Bearer",
          "AllowedScopes": []
      }
    }
  ],

  "SwaggerEndPoints": [
    {
      "Key": "animals",
      "Config": [
        {
          "Name": "Animal Service",
          "Version": "v1",
          "Url": "http://animal-service-1:80/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "emails",
      "Config": [
        {
          "Name": "Email Service",
          "Version": "v1",
          "Url": "http://email-service:8000/openapi.json"
        }
      ]
    },
    {
      "Key": "auth",
      "Config": [
        {
          "Name": "Auth Service",
          "Version": "v1",
          "Url": "http://auth-service:3000/api-docs/swagger.json" 
        }
      ]
    }

  ]
}